<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragments.UserDataFragment">

    <ImageView
        android:id="@+id/image_view_user_data"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:background="#D8D2D2"
        android:contentDescription="@string/abracadabra"
        android:src="@drawable/ic_baseline_user_placeholder" />

    <TextView
        android:id="@+id/user_data_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="310dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/repos_recycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="100dp"/>

    <ProgressBar
        android:id="@+id/progress_bar_user_data_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:visibility="invisible" />

</FrameLayout>